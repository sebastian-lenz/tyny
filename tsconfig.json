{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["DOM", "ES2015", "ES2016.Array.Include", "ES2017.Object"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "target": "es6"
  }
}
