$utility-padding ?= {
  responsive: true
  property: padding
  class: p
  values: $spacers
}

$utility-padding-x ?= {
  responsive: true
  property: padding-right padding-left
  class: px
  values: $spacers
}

$utility-padding-y ?= {
  responsive: true
  property: padding-top padding-bottom
  class: py
  values: $spacers
}

$utility-padding-top ?= {
  responsive: true
  property: padding-top
  class: pt
  values: $spacers
}

$utility-padding-right ?= {
  responsive: true
  property: padding-right
  class: pr
  values: $spacers
}

$utility-padding-bottom ?= {
  responsive: true
  property: padding-bottom
  class: pb
  values: $spacers
}

$utility-padding-left ?= {
  responsive: true
  property: padding-left
  class: pl
  values: $spacers
}

$utilities-padding-x ?= {
  padding-x: $utility-padding-x
  padding-right: $utility-padding-right
  padding-left: $utility-padding-left
}

$utilities-padding-y ?= {
  padding-y: $utility-padding-y
  padding-top: $utility-padding-top
  padding-bottom: $utility-padding-bottom
}

$utilities-padding ?= merge(
  {
    padding: $utility-padding
  },
  $utilities-padding-x, 
  $utilities-padding-y
)